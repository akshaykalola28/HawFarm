<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        card_view:cardCornerRadius="10dp"
        card_view:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/order_no_cardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order No:. "
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/order_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/order_no_cardview" />

            <View
                android:id="@+id/oreder_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/order_no"
                android:layout_margin="5dp"
                android:background="#4B4848" />


            <TextView
                android:id="@+id/product_name_cardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/oreder_view"
                android:text="Product Name:. "
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/oreder_view"
                android:layout_toRightOf="@id/product_name_cardview" />

            <View
                android:id="@+id/product_name_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/product_name_cardview"
                android:layout_margin="5dp"
                android:background="#4B4848" />

            <TextView
                android:id="@+id/Quntity_cardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_name_view"
                android:text="Quntity:. "
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/Quntity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_name_view"
                android:layout_toRightOf="@id/Quntity_cardview" />

            <View
                android:id="@+id/Quntity_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/Quntity_cardview"
                android:layout_margin="5dp"
                android:background="#4B4848" />

            <TextView
                android:id="@+id/seller_name_cardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Quntity_view"
                android:text="Seller Name:. "
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/seller_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Quntity_view"
                android:layout_toRightOf="@id/seller_name_cardview" />

            <View
                android:id="@+id/seller_name_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/seller_name_cardview"
                android:layout_margin="5dp"
                android:background="#4B4848" />

            <TextView
                android:id="@+id/delivery_address_cardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seller_name_view"
                android:text="Delivery Address:. "
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/delivery_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seller_name_view"
                android:layout_toRightOf="@id/delivery_address_cardview" />

            <View
                android:id="@+id/delivery_address_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/delivery_address_cardview"
                android:layout_margin="5dp"
                android:background="#4B4848" />

            <TextView
                android:id="@+id/status_cardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/delivery_address_view"
                android:text="Status:. "
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/delivery_address_view"
                android:layout_toRightOf="@id/status_cardview" />

            <View
                android:id="@+id/status_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/status_cardview"
                android:layout_margin="5dp"
                android:background="#4B4848" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>