<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/dialog_image"
                android:layout_width="136dp"
                android:layout_height="90dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/boxroundshape"
                android:src="@drawable/slider1" />

            <TextView
                android:id="@+id/product_name_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dialog_image"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:text="1234568751"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/seller_name_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_name_dialog"
                android:layout_marginTop="5dp"
                android:text="00000000"
                android:textColor="#000000" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/dialog_image"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contextClickable="true"
                    android:entries="@array/country_arrays"
                    android:prompt="@string/country_prompt" />

                <TextView
                    android:id="@+id/totalprice"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spinner1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:text="Total Price" />

                <Button
                    android:id="@+id/btnSubmit"
                    android:background="@drawable/button_style"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/totalprice"
                    android:text="Submit" />
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>